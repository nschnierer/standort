{
  "name": "standort",
  "version": "0.0.1",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "dotenv -- turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:watch": "turbo run test -- --watch",
    "test:coverage": "turbo run test:coverage",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@playwright/test": "^1.31.2",
    "dotenv-cli": "latest",
    "prettier": "latest",
    "puppeteer": "^19.8.2",
    "turbo": "latest",
    "yargs": "^17.7.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
