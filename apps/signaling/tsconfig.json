{
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "Node",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "lib": ["ES2021"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
